doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    // Font Awesome
    link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css', rel='stylesheet')
    // Google Fonts
    link(href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap', rel='stylesheet')
    // MDB
    link(href='https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css', rel='stylesheet')
    title Document
    style.
  body
    div(style="background-image: url('https://images.unsplash.com/photo-1561361513-2d000a50f0dc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1176&q=80'); height: 100vh; background-repeat: no-repeat;background-position: center center; background-size: cover;")
      section.mask(style='background-color: rgba(0, 0, 0, 0.6);')
        .container.py-5.h-100
          .row.d-flex.justify-content-center.align-items-center.h-100
            .col-12.col-md-8.col-lg-6.col-xl-7
              .card.shadow-2-strong(style='border-radius: 1rem; background-color: transparent;backdrop-filter: blur(10px);')
                .card-body.p-5.text-center
                  h3.mb-5.text-white Create an Account
                  form(action='http://localhost:9000/users', method='POST')
                    .d-flex.w-100.justify-content-around
                      .form-outline.mb-4.col-5
                        input#typeEmailX-2.form-control.form-control-lg.text-white(type='text', name='first_name')
                        label.form-label.text-white(for='typeEmailX-2') First Name
                      .form-outline.mb-4.col-5
                        input#typePasswordX-2.form-control.form-control-lg.text-white(type='text', name='last_name')
                        label.form-label.text-white(for='typePasswordX-2') Last Name
                    .d-flex.w-100.justify-content-around
                      .form-outline.mb-4.col-5
                        input#typeEmailX-2.form-control.form-control-lg.text-white(type='text', name='city')
                        label.form-label.text-white(for='typeEmailX-2') City
                      .form-outline.mb-4.col-5
                        input#typePasswordX-2.form-control.form-control-lg.text-white(type='email', name='email')
                        label.form-label.text-white(for='typePasswordX-2') Email
                    .d-flex.w-100.justify-content-around
                      .form-outline.mb-4.col-5
                        input#typeEmailX-2.form-control.form-control-lg.text-white(type='password', name='password')
                        label.form-label.text-white(for='typeEmailX-2') Password
                      //
                        <div class="form-outline mb-4 col-5">
                        <input type="password" id="typePasswordX-2" class="form-control form-control-lg text-white" />
                        <label class="form-label text-white" for="typePasswordX-2">Confirm Password</label>
                        </div>
                    button.btn.btn-primary.btn-lg.btn-block.w-50.m-auto(type='submit') Register
                  hr.my-4.bg-white
                  button.btn.btn-lg.btn-block.btn-primary(style='background-color: #dd4b39;', type='submit')
                    i.fab.fa-google.mx-2
                    |  Sign up with google
                  button.btn.btn-lg.btn-block.btn-primary.mb-2(style='background-color: #3b5998;', type='submit')
                    i.fab.fa-facebook-f.mx-2
                    | Sign up with facebook
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js')